<div>
  <h4 class="text-center text-4xl font-thin titlePosition">Create a Touristic Point in {{city.name}}</h4>
  <!-- Form to Create a Touristic Point -->
  <div class="justify-center mt-32 flex flex-col items-center">
    <form action="/cities/{{city._id}}/createTouristicPoint" method="post">
    <div>
      <label class="text-center">
        Name:
        <input type="text" name="name"
          class="w-56 h-10 border border-solid border-2 border-blue-400 rounded block" />
      </label>
    </div>
    <div>
      <label class="text-center">
        Description:
        <input type="text" name="description"
          class="w-56 h-10 border border-solid border-2 border-blue-400 rounded block" />
      </label>
    </div>
      <div class="justify-center text-center items-center pt-4">
        <button type="submit" class="initialAddBtnConfiguration bg-blue-600 text-white p-2 rounded-md">Create Touristic Point</button>
      </div>
    </form>
  </div>
</div>