<div>
  <h4>Create a Touristic Point in {{city.name}}</h4>
  <!-- Form to Create a Touristic Point -->
  <form action="/cities/{{city._id}}/createTouristicPoint" method="post">
    <label>
      Name:
      <input type="text" name="name" />
    </label>

    <label>
      Description:
      <input type="text" name="description" />
    </label>

    <button type="submit">Create Touristic Point</button>
  </form>

</div>