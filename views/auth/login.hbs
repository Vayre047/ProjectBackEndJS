<div id="login-form">
  <h2 class="text-center text-4xl my-10 font-thin titlePosition">Log In</h2>
  <div class="justify-center ">
    <form action="/login" method="POST">
      <div class="justify-center flex flex-col items-center">
        <label> Username
          <input type="text" name="username" placeholder="Your username" class="w-56 h-10 border border-solid border-2 border-blue-400 rounded block ps-2" />
        </label>
        <label class="pt-4"> Email
          <input type="email" name="email" placeholder="Your email" class="w-56 h-10 border border-solid border-2 border-blue-400 rounded block ps-2" />
        </label>
        <label class="pt-4"> Password
          <input type="password" name="password" placeholder="Your password" class="w-56 h-10 border border-solid border-2 border-blue-400 rounded block ps-2" />
        </label>
        <div class="flex flex-row justify-center text-center items-center pt-4">
          <button type="submit" class="initialAddBtnConfiguration bg-blue-600 text-white p-2 rounded-md w-56">Log In</button>
        </div>
        <div class="pt-4">
          <h5>Don't have an account?
            <a href="/signup" class="text-blue-400 hover:text-blue-800 hover:underline underline-offset-4">Sign up</a>
          </h5>
        </div>
        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </div>
    </form>
  </div>
</div>