

<h4>Name: {{city.name}} </h4>
<p>Description: {{city.description}}</p>

<h2>Touristic Points:</h2>

<div>
  <h4>Create a Touristic Point in {{city.name}}</h4>
  <!-- Form to Create a Review -->
  <form action="/touristicPoint/create/{{city._id}}" method="post">
    <label>
      Name:
      <input type="text" name="name" />
    </label>

    <label>
      Description:
      <input type="text" name="description" />
    </label>

    <button type="submit">Create Touristic Point</button>
  </form>

</div>
<div>
  {{#each city.touristicPoints}}
    <div class="box">
      <p>Name: {{name}}</p>
      <p>Description: {{description}}</p>
    </div>
  {{/each}}
</div>